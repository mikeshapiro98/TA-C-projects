@{
    ViewBag.Title = "Home Page";
}

@*Jumbotron*@
<div class="jumbotron border border-danger">
    <h1 class="text-center">Uh-Oh! Insurance Company</h1>
    <p class="lead text-center">Get a free quote today</p>
</div>
@*End Jumbotron*@

<h2 class="text-center">Please fill out the following information to generate a quote</h2>
<br />
<div class="bg-primary rounded border border-danger  center-block">

    @*Using Start*@

    @using (Html.BeginForm("CustomerInfo1", "Home", FormMethod.Post))
    {

        @*Begin form*@


        @*Name*@

        <div class="row no-gutters">
            <div class="col-lg-3 ">
                <h4 class="text-center special-label-text">First Name</h4>
                <input name="FirstName" type="text" class="form-control" placeholder="First name">

            </div>
            <br />
            <div class="col-lg-3 align-items-center">
                <h4 class="text-center special-label-text">Last Name</h4>
                <input name="LastName" type="text" class="form-control" placeholder="Last name">
            </div>


            @*Email*@
            <div class="col-lg-3">
                <h4 class="text-center special-label-text">Email</h4>
                <input name="EmailAddress" type="email" class="form-control" placeholder="Email">
            </div>
            <br />



            @*Birthday*@
            <div class="col-lg-3">
                <h4 class="text-center special-label-text">Birthday</h4>
                <input name="dateOfBirth" type="date" class="form-control" placeholder="Birthday">
            </div>


            @*Vehicle Year*@
            <div class="form-group col-lg-4 mt-3">
                <h4 class="text-center special-label-text">Year of Vehicle</h4>
                <select name="CarYear" class="form-control">
                    <option>2000 or earlier</option>
                    <option>2001</option>
                    <option>2002</option>
                    <option>2003</option>
                    <option>2004</option>
                    <option>2005</option>
                    <option>2006</option>
                    <option>2007</option>
                    <option>2008</option>
                    <option>2009</option>
                    <option>2010</option>
                    <option>2011</option>
                    <option>2012</option>
                    <option>2013</option>
                    <option>2014</option>
                    <option>2015</option>
                    <option>2016</option>
                    <option>2017</option>
                    <option>2018</option>
                </select>
            </div>
            <br />

            @*Car make/model*@
            <div class="col-lg-4 mt-3">
                <h4 class="text-center special-label-text">Car Make</h4>
                <input name="carMake" type="text" class="form-control" placeholder="Car Make">
            </div>
            <br />
            <div class="col-lg-4 mt-3">
                <h4 class="text-center special-label-text">Car Model</h4>
                <input name="carModel" type="text" class="form-control" placeholder="Car Model">
            </div>
            <br />

            @*DUI*@

            <div class="special-div-center col-lg-6 mt-3">
                <h4 class="text-center special-label-text-form">Have you ever had a DUI?</h4>
                <div class="form-check">
                    <input name="DUI" class="form-check-input" type="radio" id="sober" value="false" checked>
                    <label class="form-check-label" for="sober">
                        No
                    </label>
                </div>
                <div class="form-check-next">
                    <input name="DUI" class="form-check-input" id="drunk" type="radio" value="true">
                    <label class="form-check-label" for="drunk">
                        Yes
                    </label>
                </div>
            </div>
            <br />

            <br />
            @*Speeding Tickets*@
            <div class="special-div-center col-lg-6 mt-3">


                <h4 class="text-center special-label-text-form-last ">How many speeding tickets have you received?</h4>
                <input name="SpeedingTicket" type="number" class="form-control" placeholder="Tickets">

                <br />
            </div>

            @*Full Coverage?*@
            <div class="special-div-center col-lg-10 mt-3">
                <h4 class="text-center special-label-text-form-last">Would you like full coverage or liability?</h4>
                <div class="form-check">
                    <input name="FullCoverage" class="form-check-input" type="radio" id="full" value="true" checked>
                    <label class="form-check-label" for="full">
                        Full Coverage
                    </label>
                </div>
                <div class="form-check-next">
                    <input name="FullCoverage" class="form-check-input" id="liability" type="radio" value="false">
                    <label class="form-check-label" for="liability">
                        Liability Only
                    </label>
                </div>
            </div>

            @*Button*@


            <button type="submit" class="btn btn-danger btn-lg btn-block center-block col-10"> Submit </button>

        </div>


        @*End Form*@


     }

    @*Using end*@

</div>